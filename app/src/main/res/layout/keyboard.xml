            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/key_height"
            android:layout_marginHorizontal="@dimen/key_margin"
            android:layout_weight="@dimen/key_width"
            android:background="@drawable/key"
            android:fontFamily="@font/baloo_bhaina2"
            android:gravity="center"
            android:text=","
            android:textColor="@color/colorText"
            android:textSize="@dimen/key_text_size" />

