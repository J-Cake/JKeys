                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
                android:background="@drawable/key"
                android:fontFamily="@font/baloo_bhaina2"
                android:gravity="center"
