                android:textColor="@color/colorText"
                android:textSize="@dimen/key_text_size"
                app:layout_flexBasisPercent="100%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
                android:background="@drawable/key"
                android:fontFamily="@font/baloo_bhaina2"
                android:gravity="center"
                android:text="j"
                android:textColor="@color/colorText"
                android:textSize="@dimen/key_text_size"
                app:layout_flexBasisPercent="100%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
                android:background="@drawable/key"
                android:fontFamily="@font/baloo_bhaina2"
                android:gravity="center"
                android:text="k"
                android:textColor="@color/colorText"
                android:textSize="@dimen/key_text_size"
                app:layout_flexBasisPercent="100%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
                android:background="@drawable/key"
                android:fontFamily="@font/baloo_bhaina2"
                android:gravity="center"
                android:text="l"
                android:textColor="@color/colorText"
                android:textSize="@dimen/key_text_size"
                app:layout_flexBasisPercent="100%" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/key_height"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/key_margin_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/shift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            app:alignItems="center"
            app:justifyContent="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:src="@drawable/ic_keyboard_capslock_black_24dp" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            app:alignItems="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
                android:background="@drawable/key"
                android:fontFamily="@font/baloo_bhaina2"
                android:gravity="center"
                android:text="z"
                android:textColor="@color/colorText"
                android:textSize="@dimen/key_text_size"
                app:layout_flexBasisPercent="100%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
                android:background="@drawable/key"
                android:fontFamily="@font/baloo_bhaina2"
                android:gravity="center"
                android:text="x"
                android:textColor="@color/colorText"
                android:textSize="@dimen/key_text_size"
                app:layout_flexBasisPercent="100%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/key_height"
                android:layout_marginHorizontal="@dimen/key_margin"
                android:layout_marginVertical="@dimen/key_margin_vertical"
